<style>
    .btn {
        width: 100%;
        padding: 15px 20px;
        font-size: 18px;
    }

</style>


@Html.Partial("_options")

<!-- Linkando o arquivo ccs da tabela -->
<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> 
<div class="container" style="width:40%; margin-top:20px">
    <h4 style="text-align:center">List Of Employees</h4>
    @if (Model != null && Model.Any()) {

        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    @* <a class="btn btn-block btn-primary" href="/Teste/EmployeeDetail?EmployeeID=@item.EmployeeID">  *@
                    @*     @item.Name *@
                    @* </a> *@

                    @Html.ActionLink(item.Name, "EmployeeDetail","Employee", new { EmployeeID = item.EmployeeID }, new {@class="btn btn-block btn-primary"})
                </li>
            }
        </ul>
    } else {
        <p>No employees found.</p>
    }
</div>

