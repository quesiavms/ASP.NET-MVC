@model IEnumerable<MVCTutorial.Models.EmployeeViewModel>
@{
    /*
    * Bloco de código C# embutido na view.
    * Define um título para a página usando ViewBag.
    * O ViewBag permite passar dados do controller para a view.
    */
    ViewBag.Title = "Index";

    /*
     * Define que esta view não usará um layout principal.
     * Se quiser usar um layout, poderia definir, por exemplo: Layout = "~/Views/Shared/_Layout.cshtml";
     */
    Layout = null;
}


<!-- Linkando o arquivo ccs da tabela -->
<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> 
<div class="table table-striped" style="width:60%"> 
    @if (Model != null && Model.Any())
    {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>DepartmentID</th>
                        <th>DepartmentName</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td>@item.EmployeeID</td>
                                <td>@item.Name</td>
                                <td>@item.DepartmentID</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.Address</td>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <p>No data available.</p>
    }
</div>