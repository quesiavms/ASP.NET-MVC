@{
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container" style="width:25%; margin-top:2%">
    @{
        string message = "How are you today?";

        int i = 5;
        int j = 10;
        int k = i + j;
    }

    <b>@message</b>
    <div>
        <b>Your sum is: </b> @k
    </div>
    <div>
        Today is : @DateTime.Now.DayOfWeek
    </div>

    @for( int num = 0; num < 10; num++)
    {
        <div>
            Number is: @num at @DateTime.Now.TimeOfDay
        </div>
    }


    @{
        int n = 6;
    }
    @if (n % 2 == 0)
    {
       <div> @n is even number </div>
    }
    else
    {
        <div> @n is an odd number</div>
    }
</div>
