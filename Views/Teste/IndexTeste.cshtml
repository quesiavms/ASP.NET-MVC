@*criando o modelinho da base de dados*@
@model IEnumerable<MVCTutorial.Models.Employee> 
@{
    /*
    * Bloco de código C# embutido na view.
    * Define um título para a página usando ViewBag.
    * O ViewBag permite passar dados do controller para a view.
    */
    ViewBag.Title = "Index";

    /*
     * Define que esta view não usará um layout principal.
     * Se quiser usar um layout, poderia definir, por exemplo: Layout = "~/Views/Shared/_Layout.cshtml";
     */
    Layout = null;
}

<!-- Tag HTML para um cabeçalho de nível 2 -->
<h2> Teste teste </h2>

<!-- Exibe o valor da variável ViewBag.Name na página -->
@ViewBag.Name


<!-- Linkando o arquivo ccs da tabela -->
<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> 
<table class="table table-striped" style="width:60%">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Department</th>
    </tr>
    <tbody>

        @foreach (var item in ViewData["EmployeeList"] as List<MVCTutorial.Models.Employee>)
        {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.Name</td>
                    <td>@item.Department</td>
                </tr>
            }

    </tbody>
</table>
<ul class="list-group">
    <li class="list-group-item">
        Your viewBag Value is <b> @ViewBag.EmployeeNameVB</b>
    </li>
    <li class="list-group-item">
        Your viewData is <b>@ViewData["EmployeeNameVD"]</b>
    </li>
    <li class="list-group-item">
        Your tempData is <b>@TempData["EmployeeNameTD"]</b>
    </li>
    <li class="list-group-item">
        <a href="/Teste/SecondPage"> Go to SecondPage</a>
    </li>
</ul>